a) CREATE TABLE nomes (
    nome VARCHAR(60)
);

INSERT INTO nomes (nome) VALUES
('Roberta'),
('Roberto'),
('Maria Clara'),
('Jo√£o');

b) SELECT UPPER(nome) FROM nomes;

c) SELECT nome, LENGTH(nome) AS tamanho FROM nomes;

d) SELECT
    CASE
        WHEN RIGHT(nome, 1) = 'a' THEN 'Sra. ' + nome
        ELSE 'Sr. ' + nome
    END AS nome_com_tratamento
FROM nomes;
